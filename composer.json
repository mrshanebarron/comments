{
    "name": "mrshanebarron/comments",
    "description": "Threaded comments system for Laravel with Livewire, Blade, and Vue support",
    "keywords": ["laravel", "comments", "threaded", "nested", "livewire", "blade", "vue"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shane Barron",
            "email": "mrshanebarron@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "suggest": {
        "mrshanebarron/button": "For styled submit buttons",
        "mrshanebarron/likes": "For liking comments",
        "mrshanebarron/editor": "For rich text comment editing"
    },
    "autoload": {
        "psr-4": {
            "LaravelDesign\\Comments\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelDesign\\Comments\\CommentsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
